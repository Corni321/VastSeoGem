    document.getElementById('analyze-button').addEventListener('click', () => {
      const urlInput = document.getElementById('url-input').value;
      if (urlInput) {
        // Here you would add the logic to fetch and analyze the URL.
        // For now, we'll just show some placeholder results.
        document.getElementById('results').style.display = 'block';
        
        // Populate placeholder data
        document.getElementById('result-title').textContent = 'Vast SEO Gem - Your SEO Companion';
        document.getElementById('result-meta').textContent = 'Get detailed SEO analysis for any webpage. We provide insights on titles, meta descriptions, headings, and more to help you rank higher.';
        document.getElementById('result-headings').innerHTML = '<li>Main H1 Heading</li><li>Subheading for a Section</li><li>Another Subheading</li>';
      } else {
        // Display a message if the input is empty
        alert('Please enter a valid URL.');
      }
    });

